<Window x:Class="Demo04_RadioButtonAndDatePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo04_RadioButtonAndDatePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RadioButton x:Name="rb_student" GroupName="job" Content="学生" HorizontalAlignment="Left" Margin="115,123,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_worker" GroupName="job" Content="工人" HorizontalAlignment="Left" Margin="115,163,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_teacher" GroupName="job" Content="教师" HorizontalAlignment="Left" Margin="115,204,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_man" Content="男" HorizontalAlignment="Left" Margin="88,73,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rb_woman" Content="女" HorizontalAlignment="Left" Margin="157,73,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="dp_selected" HorizontalAlignment="Left" Margin="290,86,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_showTime" Content="显示时间" HorizontalAlignment="Left" Margin="290,130,0,0" VerticalAlignment="Top" Width="75" Click="btn_showTime_Click"/>
    </Grid>
</Window>
